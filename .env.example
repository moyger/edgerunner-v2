# Edgerunner v2 Environment Configuration

# Application
VITE_APP_NAME=Edgerunner v2
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Error Monitoring (Sentry)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENABLED=false

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8001
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# Feature Flags
VITE_FEATURE_LIVE_TRADING=false
VITE_FEATURE_PAPER_TRADING=true
VITE_FEATURE_BACKTESTING=true
VITE_FEATURE_SOCIAL_TRADING=false

# Security
VITE_CSP_REPORT_URI=/api/csp-report
VITE_SESSION_TIMEOUT=3600000

# Trading Configuration
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_TIMEZONE=America/New_York
VITE_MAX_CONCURRENT_ORDERS=50
VITE_MAX_POSITION_SIZE=0.1

# Analytics & Monitoring
VITE_GA_TRACKING_ID=
VITE_HOTJAR_ID=
VITE_MIXPANEL_TOKEN=

# Development
VITE_MOCK_API=true
VITE_DEBUG_MODE=true
VITE_SHOW_DEBUG_PANEL=false